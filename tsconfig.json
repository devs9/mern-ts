{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
//      "@app/*": ["./src/app/*"],
//      "@tests/*": ["./src/tests/*"],
//      "@config/*": ["./src/config/*"],
//      "@utils/*": ["./src/utils/*"],
//      "@models/*": ["./src/models/*"],
//      "@routes/*": ["./src/routes/*"],
//      "@schemas/*": ["./src/schemas/*"],
//      "@services/*": ["./src/services/*"],
//      "@constants/*": ["./src/constants/*"],
//      "@validations/*": ["./src/validations/*"],
//      "@controllers/*": ["./src/controllers/*"],
//      "@middlewares/*": ["./src/middlewares/*"],
      "@TS/*": ["./src/interfaces/*"],
      "*": [
        "./node_modules/@types"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
