{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "paths": {
      "@ts/*": ["src/interfaces/*"]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
