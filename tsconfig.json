{
  "compilerOptions": {
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "baseUrl": ".",
    "alwaysStrict": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "removeComments": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "typeRoots" : ["./node_modules/@types", "./typings"],
    "paths": {
      "@ts/*": ["src/interfaces/*"],
      "*": [
        "node_modules/@types"
      ]
    }
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "node_modules/heroku-ssl-redirect"]
}
