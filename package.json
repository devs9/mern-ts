{
  "name": "@devs9/mern-ts",
  "author": "George PolAdaShvili",
  "description": "MERN with Typescript!",
  "repository": "https://github.com/devs9/mern-ts",
  "version": "0.0.5",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "watch-ts": "tsc -w",
    "watch-node": "env NODE_ENV=development nodemon src/server.ts",
    "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"cyan.bold,yellow.bold,green.bold\" \"npm run watch-ts\" \"npm run watch-node\"",
    "start": "env NODE_ENV=production ts-node --transpile-only src/server.ts",
    "lint": "tsc --noEmit && eslint \"**/*.{js,ts}\" --quiet --fix",
    "test": "jest --forceExit --detectOpenHandles",
    "postinstall": "npm run build"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "bcrypt": "^4.0.1",
    "compression": "^1.7.4",
    "connect-mongo": "^3.2.0",
    "cookie-parser": "^1.4.5",
    "cors": "^2.8.5",
    "dotenv": "^8.2.0",
    "envalid": "^6.0.1",
    "express": "^4.17.1",
    "express-session": "^1.17.1",
    "helmet": "^3.22.0",
    "hpp": "^0.2.3",
    "jest": "^26.0.1",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.15",
    "mongoose": "^5.9.14",
    "morgan": "^1.10.0",
    "ts-jest": "^26.0.0",
    "ts-node": "^8.10.1",
    "typescript": "^3.9.2",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.0",
    "@types/compression": "^1.7.0",
    "@types/cookie-parser": "^1.4.2",
    "@types/cors": "^2.8.6",
    "@types/eslint": "^6.8.1",
    "@types/express": "^4.17.6",
    "@types/express-session": "^1.17.0",
    "@types/hapi__joi": "^17.1.0",
    "@types/helmet": "0.0.47",
    "@types/hpp": "^0.2.1",
    "@types/jest": "^25.2.2",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/lodash": "^4.14.151",
    "@types/mongoose": "^5.7.20",
    "@types/morgan": "^1.9.0",
    "@types/node": "^14.0.1",
    "@types/supertest": "^2.0.9",
    "@typescript-eslint/eslint-plugin": "^2.31.0",
    "@typescript-eslint/parser": "^2.31.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.3",
    "nodemon": "^2.0.4",
    "prettier": "^2.0.5",
    "supertest": "^4.0.2"
  }
}
